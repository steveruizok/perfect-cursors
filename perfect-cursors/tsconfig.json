{
  "extends": "../tsconfig.base.json",
  "exclude": ["node_modules", "dist", "docs"],
  "include": ["src"],
  "compilerOptions": {
    "outDir": "./dist/types",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "~*": ["./src/*"]
    }
  },
  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "out": "docs"
  }
}
